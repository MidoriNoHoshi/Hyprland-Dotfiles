#waybar > * {
  color: #ffffff;
  /*margin: 0 10px;*/
  padding: 5px 15px;
  background-color: #000000;
  /*border-radius: 20px;*/
}

#waybar > *:hover {
  color: #ffffff
}

window#waybar {
  background: #2E3436;
  margin: 0 15px;
  padding: 5px 10px;
  border-radius: 10px;
}

tooltip {
  background: #000000;
  border: 1px solid #ffffff;
  border-radius: 4px;
  border-width: 1px;
}

#workspaces {
  padding: 4px;
  margin-left: 5px;
  background-color: transparent;
  color: #ffffff;
}

#workspaces button{
  color: #2E3436;
  background-color: transparent;
  margin: 0;
  padding: 10px 5px;
  min-width:24px;
  border-bottom: 1px solid transparent;
  border-radius: 16px;
}

#workspaces button.active {
  color: #ffffff;
  transition: all 0.2s cubic-bezier(0.55, -0.68, 0.48, 1.682);
  opacity: 1;
}

#workspaces button.focused {
  font-size: 32px;
  background-color: #ffffff;
  color: #ffffff;
}

